---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Transcribr - Privacy Policy">
  <div class="max-w-4xl mx-auto bg-white rounded-xl p-8 md:p-12 mt-10">
    <header class="mb-8 text-center">
      <h1 class="text-4xl font-extrabold text-gray-800 mb-2">
        Help &amp; Support
      </h1>
    </header>

    <section class="h-dvh">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Contact Us</h2>
      <p class="text-gray-700">
        If you have any questions, feature request or feedback, you can contact
        us:
      </p>
      <ul class="list-disc list-inside space-y-2 text-gray-700 ml-4 mt-4">
        <li>
          By email: <a
            href="mailto:support@transcribr.org"
            class="text-blue-600 hover:underline">support@transcribr.org</a
          >
        </li>
        <li>
          For feedback or feature requests: <a
            href="https://form.intentforms.com/forms/h4refrqak46gyq9"
            class="text-blue-600 hover:underline"
            >https://form.intentforms.com/forms/h4refrqak46gyq9</a
          >
        </li>
      </ul>
    </section>
  </div>
</Layout>
