---
// Simple logo component using the transcribr branding
export interface Props {
  textClass?: string;
}

const {
  textClass = "text-xl font-semibold text-foreground",
} = Astro.props;
---

<a href="/" class="flex items-center space-x-2">
  <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-primary">
    <div class="flex space-x-1">
      <div class="w-0.5 h-3 bg-white/70 rounded-full"></div>
      <div class="w-0.5 h-4 bg-white/90 rounded-full"></div>
      <div class="w-0.5 h-3 bg-white/80 rounded-full"></div>
      <div class="w-0.5 h-5 bg-white rounded-full"></div>
    </div>
  </div>
  <span class={textClass}>transcribr</span>
</a>
