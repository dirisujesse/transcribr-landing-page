---
// Pricing section with updated subscription model
let appUrl = "http://app.transcribr.org/";
---

<section id="pricing" class="py-24 bg-gradient-to-br from-muted/50 to-white">
  <div class="container mx-auto px-4 lg:px-6">
    <div class="max-w-4xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16" data-animate>
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
          Simple, transparent pricing
        </h2>
        <p class="text-xl text-muted-foreground">
          Start free, upgrade when you need more. No hidden fees, cancel
          anytime.
        </p>
      </div>

      <!-- Pricing Cards -->
      <div class="grid md:grid-cols-2 gap-8 max-w-2xl mx-auto">
        <!-- Free Plan -->
        <div
          class="bg-white rounded-2xl border-2 border-border p-8 hover:border-primary/20 hover:shadow-lg transition-all duration-300"
          data-animate
        >
          <div class="text-center mb-8">
            <h3 class="text-2xl font-bold text-foreground mb-2">Free</h3>
            <div class="text-4xl font-bold text-foreground mb-2">
              $0
              <span class="text-lg font-normal text-muted-foreground"
                >/month</span
              >
            </div>
            <p class="text-muted-foreground">Perfect for getting started</p>
          </div>

          <div class="space-y-4 mb-8">
            <div class="flex items-center space-x-3">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="text-primary"
              >
                <path d="M9 16.17L4.83 12L3.41 13.41L9 19L21 7L19.59 5.59Z"
                ></path>
              </svg>
              <span class="text-foreground">Up to 30 minutes total daily</span>
            </div>
            <div class="flex items-center space-x-3">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="text-primary"
              >
                <path d="M9 16.17L4.83 12L3.41 13.41L9 19L21 7L19.59 5.59Z"
                ></path>
              </svg>
              <span class="text-foreground">Accurate text transcription</span>
            </div>
            <div class="flex items-center space-x-3">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="text-primary"
              >
                <path d="M9 16.17L4.83 12L3.41 13.41L9 19L21 7L19.59 5.59Z"
                ></path>
              </svg>
              <span class="text-foreground">Mobile & web apps</span>
            </div>
            <div class="flex items-center space-x-3">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="text-primary"
              >
                <path d="M9 16.17L4.83 12L3.41 13.41L9 19L21 7L19.59 5.59Z"
                ></path>
              </svg>
              <span class="text-foreground"
                >Export Transcripts as SRT, VTT, PDF, CSV &amp; TXT</span
              >
            </div>
            <div class="flex items-center space-x-3">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="text-primary"
              >
                <path d="M9 16.17L4.83 12L3.41 13.41L9 19L21 7L19.59 5.59Z"
                ></path>
              </svg>
              <span class="text-foreground">Synchronized audio playback</span>
            </div>
            <div class="flex items-center space-x-3">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="text-primary"
              >
                <path d="M9 16.17L4.83 12L3.41 13.41L9 19L21 7L19.59 5.59Z"
                ></path>
              </svg>
              <span class="text-foreground">Inline transcript edit</span>
            </div>
            <div class="flex items-center space-x-3">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="text-muted-foreground"
              >
                <path d="M18 6L6 18M6 6L18 18"></path>
              </svg>
              <span class="text-muted-foreground"
                >No speaker identification</span
              >
            </div>
          </div>

          <a href={appUrl} target="_blank" rel="noopener noreferrer">
            <button
              class="w-full bg-muted text-foreground py-3 rounded-lg font-medium hover:bg-muted/80 transition-colors cursor-pointer"
            >
              Get Started Free
            </button>
          </a>
        </div>

        <!-- Premium Plan -->
        <div
          class="bg-primary text-primary-foreground rounded-2xl border-2 border-primary p-8 shadow-xl relative overflow-hidden"
          data-animate
        >
